@import "../../utils/weui.wxss";
@import "../../utils/showModel.wxss";

.box {
  position: absolute;
}

.after-box {
  top: 0;
  position: relative;
}

.term {
  display: flex;
  flex-direction: row;
  color: #9b9b9b;
}

.term-item {
  flex: 1;
  text-align: center;
  margin: 10rpx 30rpx;
  padding: 10rpx 5rpx;
}

.term-select {
  color: #fff;
  border-radius: 50rpx;
  background: #6c9;
}

.grade-head {
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #f9f9f9;
  font-weight: 600;
  display: flex;
  flex-direction: row;
}

.grade-head-item {
  padding: 15rpx 0;
  color: #92979b;
  text-align: center;
}

.grade {
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.grade-item {
  padding: 15rpx 0;
  color: #333;
  text-align: center;
}

.text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}

.sw {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  /*蒙层的透明度可以自定义*/
  z-index: 9999999999;
}

.add_icon {
  position: fixed;
  width: 42px;
  height: 42px;
  bottom: 30px;
  right: 20px;
  z-index: 99999999;
}

.flex-item {
  width: 95rpx;
  height: 100px;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 3px;
}

.smalltext {
  font-size: 65%;
  color: #fff;
  padding-left: 2px;
}

.top {
  display: flex;
  flex-direction: row;
  background-color: #d2e6b3;
  color: #7cba23;
}

.top-text {
  width: 103rpx;
  height: 70rpx;
  font-size: 11pt;
  color: #4d4d4d;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.top-text-strong {
  width: 103rpx;
  height: 70rpx;
  font-size: 11pt;
  font-weight: bold;
  color: #73b4ef;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.week {
  height: 35rpx;
  width: 52rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.scroll {
  /* height: 1170rpx;*/
  z-index: 101;
  /*position: fixed;*/
}

.left {
  width: 42rpx;
  height: 100rpx;
  font-size: 12pt;
  color: #4d4d4d;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 3%;
}

.after-left {
  text-align: center;
  font-size: 7pt;
  justify-content: center;
  align-items: center;
  color: #aaa;
}

.after-left-strong {
  text-align: center;
  font-size: 7pt;
  justify-content: center;
  align-items: center;
  color: #73b4ef;
}

.add_icon {
  position: fixed;
  width: 42px;
  height: 42px;
  bottom: 30px;
  right: 20px;
  z-index: 999;
}

.url {
  margin-top: 2%;
  font: 50%;
  color: #413c3c6e;
}

.table {
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 0;
}

.scrollClass {
  display: flex;
  width: 100%;
  white-space: nowrap;
  height: 100%;
  background-color: white;
}

.table_header {
  display: inline-flex;
}

.th1 {
  display: flex;
  flex-direction: column;
  width: 450rpx;
  height: 70rpx;
  /*background:rgba(217, 227, 233,0.7);*/
  background: rgba(255, 255, 255, 0.7);
  border-right: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
  justify-content: center;
  align-items: center;
  overflow-x: auto;
}

.th2 {
  display: flex;
  flex-direction: column;
