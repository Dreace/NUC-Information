}

.triangle-topright {
  position: absolute;
  z-index: 9999;
  width: 0;
  height: 0;
  transform: rotate(90deg);
  border-width: 12rpx;
  /* border-color: #ddd red red #ddd; */
  border-style: solid;
  border-top-left-radius: 3px;
  border-bottom-right-radius: 3px;
  box-shadow: 1px 1px 2px gray;
}