.search-button {
  background-color: #73b4ef;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1em;
  border-radius: 45rpx;
  color: white;
  box-shadow: 5rpx 5rpx 15rpx #ccc;
  width: 120rpx;
}

.tip-barcode {
  text-align: center;
  color: #73b4ef;
  width: 100%;
  margin-top: 50rpx;
}
