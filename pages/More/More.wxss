/* pages/More/More.wxss */
@import "../../utils/weui.wxss";
.background{
  width: 96%;
  margin-left: 2%;
  margin-bottom: 5%;
  border-bottom: 1rpx #d9d9d9;
  border-radius: 25rpx;
  background-color: rgb(255, 255, 255);
}
.sub-title-view {
    padding: 30rpx 30rpx 18rpx;
    font-size: 28rpx;
    color: #888;
    width: 100%;
    box-sizing: border-box;
}
.page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    min-height: 100vh;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}