.box {
  position: absolute;
}

.after-box {
  top: 0;
  position: relative;
}

.grade-head {
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #f9f9f9;
  font-weight: 600;
  display: flex;
  flex-direction: row;
}

.grade-head-item {
  padding: 15rpx 0;
  color: #92979b;
  text-align: center;
}

.grade {
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.grade-item {
  padding: 15rpx 0;
  color: #333;
  text-align: center;
}

.text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}

.sw {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  /*蒙层的透明度可以自定义*/
  z-index: 9999999999;
}

.flex-item {
  width: 95rpx;
  height: 100px;
}

.timetable-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 3px;
}

.smalltext {
  font-size: 70%;
  color: #fff;
  padding-left: 2px;
}

.top {
  display: flex;
  flex-direction: row;
}

.top-text {
  width: 103rpx;
  height: 70rpx;
  font-size: 11pt;
  color: #4d4d4d;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.top-text-strong {
  color: #73b4ef;
  font-weight: bold;
}

.week {
  height: 35rpx;
  width: 52rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.scroll {
  /* height: 1170rpx;*/
  z-index: 101;
  /*position: fixed;*/
}
.timetable {
  height: 1100rpx;
  width: 730rpx;
  display: flex;
}

.left {
  width: 42rpx;
  height: 100rpx;
  font-size: 12pt;
  color: #4d4d4d;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 3%;
}

.after-left {
  text-align: center;
  font-size: 7pt;
  justify-content: center;
  align-items: center;
  color: #aaa;
}

.after-left-strong {
  color: #73b4ef;
  font-weight: bold;
}

.add_icon {
  position: fixed;
  width: 42px;
  height: 42px;
  bottom: 30px;
  right: 20px;
  z-index: 999;
}

.url {
  margin-top: 2%;
  font: 50%;
  color: #413c3c6e;
}

.table {
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 0;
}

.triangle-topright {
  position: absolute;
  z-index: 9999;
  width: 0;
  height: 0;
  transform: rotate(90deg);
  border-width: 12rpx;
  /* border-color: #ddd red red #ddd; */
  border-style: solid;
  border-top-left-radius: 3px;
  border-bottom-right-radius: 3px;
  box-shadow: 1px 1px 2px gray;
}

.line{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 100%;
  height: 2rpx;
  background-color: #D8D8D8;
  }