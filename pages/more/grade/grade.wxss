.title-box {
  margin-top: 30rpx;
}

.title-background {
  justify-content: center;
}

.sub-title-box {
  margin-left: 0;
}

.modal {
  font-size: 28rpx;
  z-index: 99999999999999;
  background: rgba(0, 0, 0, 0.3);
}

.semester {
  display: flex;
  flex-direction: row;
  color: #9b9b9b;
}

.semester-item {
  flex: 1;
  text-align: center;
  margin: 10rpx 30rpx;
  padding: 10rpx 5rpx;
}

.semester-selected {
  color: #fff;
  border-radius: 50rpx;
  background: #6c9;
}

.grade-head {
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #f9f9f9;
  font-weight: 600;
  display: flex;
  flex-direction: row;
}

.grade-head-item {
  padding: 15rpx 0;
  color: #92979b;
  text-align: center;
}

.grade {
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.grade-item {
  padding: 15rpx 0;
  color: #333;
  text-align: center;
}

.url {
  margin-top: 2%;
  font: 50%;
  color: #413c3c6e;
}