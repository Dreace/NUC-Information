
page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  color: #666;
  background-color: #f7f7f7;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.container {
  flex: none;
  background-color: #fff;
  padding: 0 30rpx 10rpx 30rpx;
}

.book-item {
  margin-top: 50rpx;
  padding-bottom: 12px;
  border-bottom: 3rpx solid #eee;
  display: flex;
  flex-direction: row;
}

.book-cover {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-image {
  flex: none;
  width: 200rpx;
}

.book-detail {
  margin-left: 40rpx;
  overflow: hidden;
}

.book-name {
  font-size: 1.3em;
  font-weight: bold;
  margin-top: 18rpx;
}

.book-other {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 150%;
  font-size: 1.1em;
}

.introduction {
  margin-top: 20rpx;
  font-size: 1.3em;
}

.introduction-title {
  font-weight: bold;
}

.introduction-content {
  margin-top: 20rpx;
  line-height: 140%;
  font-size: 0.93em;
}

.collection {
  margin-top: 35rpx;
}

.collection-title {
  font-size: 1.3em;
  color: #73b4ef;
  line-height: 250%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-color: #bbb;
  border-bottom-style: solid;
  border-bottom-width: 3rpx;
}

.collection-detail {
  margin-top: 25rpx;
  background-color: #fafafa;
  padding: 15rpx 20rpx;
  font-size: 1.1em;
  line-height: 130%;
}
